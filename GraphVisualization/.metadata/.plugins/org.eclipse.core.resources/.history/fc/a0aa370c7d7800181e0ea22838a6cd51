
public class ExpCont extends Thread {

	private boolean exp; // true-> expansion / false-> contraction
	
	private Graph graph;
	
	public ExpCont() {
		
		start();
		
	}
	
	public void run() {
		
		try {
			
			while(true) {
				
				synchronized(this) {
					
				wait();
				
				}
				
				if(exp) {
					
				}
				
			}
			
		}catch(Exception e) {
			
		}
	}

	public void setExp(boolean exp) {
		this.exp = exp;
	}

	public void setGraph(Graph graph) {
		this.graph = graph;
	}

	public synchronized void wakeup() {
		
		notify();
		
	}
}
